			div.span4.scoreboard
				table.table-hover
					thead
						tr
							th.title(colspan='2') 男排 （主攻手）
						tr
							th 姓名
							th 得票數
					tbody
						each vote, name in votes['batt']
							tr
								td #{name}
								td #{vote.site}
			div.span4.scoreboard
				table.table-hover
					thead
						tr
							th.title(colspan='2') 男排 （攔中手）
						tr
							th 姓名
							th 得票數
					tbody
						each vote, name in votes['bmid']
							tr
								td #{name}
								td #{vote.site}
			div.span4.scoreboard
				table.table-hover
					thead
						tr
							th.title(colspan='2') 男排 （舉球員）
						tr
							th 姓名
							th 得票數
					tbody
						each vote, name in votes['bset']
							tr
								td #{name}
								td #{vote.site}
		div.row-fluid
			div.span4.scoreboard
				table.table-hover
					thead
						tr
							th.title(colspan='2') 男排 （自由球員）
						tr
							th 姓名
							th 得票數
					tbody
						each vote, name in votes['bfree']
							tr
								td #{name}
								td #{vote.site}
			div.span4.scoreboard
				table.table-hover
					thead
						tr
							th.title(colspan='2') 女排 （攻擊手）
						tr
							th 姓名
							th 得票數
					tbody
						each vote, name in votes['gatt']
							tr
								td #{name}
								td #{vote.site}
			div.span4.scoreboard
				table.table-hover
					thead
						tr
							th.title(colspan='2') 女排 （舉球員）
						tr
							th 姓名
							th 得票數
					tbody
						each vote, name in votes['gset']
							tr
								td #{name}
								td #{vote.site}
		div.row-fluid
			h4.span12 壘球
		div.row-fluid
			div.span4.scoreboard
				table.table-hover
					thead
						tr
							th.title(colspan='2') 壘球 （投手）
						tr
							th 姓名
							th 得票數
					tbody
