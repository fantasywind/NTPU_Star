extends layout

block content 
	div.container
		div.row-fluid
			div#title-box.span12.hero-unit
				h1 2013 紅藍明星對抗賽
				p 由臺北大學所精挑細選的選手們
		div.row-fluid
			h2.span7 初選戰況
			if !vote_start
				h2.pull-right 投票尚未開始
			else
				h2.pull-right 投票熱烈開跑
		div.row-fluid
			h6.span12(style='color:#777;text-align:right;') 每五分鐘更新票數，最後更新 #{update}
		div.row-fluid
			h4.span12 籃球
		div.row-fluid
			div.span4.scoreboard
				table.table-hover
					thead
						tr
							th.title(colspan='2') 籃球 ( 1-5名 )
						tr
							th 姓名
							th 得票數
					tbody
						each vote, name in votes['basket1']
							tr
								td #{name}
								td #{vote.site}
			div.span4.scoreboard
				table.table-hover
					thead
						tr
							th.title(colspan='2') 籃球 ( 6-10 名)
						tr
							th 姓名
							th 得票數
					tbody
						each vote, name in votes['basket2']
							tr
								td #{name}
								td #{vote.site}
			div.span4.scoreboard
				table.table-hover
					thead
						tr
							th.title(colspan='2') 籃球 ( 11-15 名)
						tr
							th 姓名
							th 得票數
					tbody
						each vote, name in votes['basket3']
							tr
								td #{name}
								td #{vote.site}
